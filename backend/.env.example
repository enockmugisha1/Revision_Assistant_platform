# Server
PORT=5000
NODE_ENV=development

# Frontend URLs for CORS and Socket.IO (comma-separated for multiple origins)
# For Production (Vercel):
FRONTEND_URLS=https://revision-assistant-platform.vercel.app,https://revision-assistant-platform-git-main-mutangana-benonis-projects.vercel.app,https://revision-assistant-platform-nrcqj3h6f.vercel.app,http://localhost:3000
# Or use FRONTEND_URL for a single origin:
FRONTEND_URL=https://revision-assistant-platform.vercel.app

# Database
MONGODB_URI=mongodb://localhost:27017/revision_assistant

# JWT
JWT_SECRET=change-me-to-a-long-random-string
JWT_REFRESH_SECRET=change-me-to-another-long-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Revision Assistant <no-reply@revision-assistant.test>"

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Third-party (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AI Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile
OPENAI_API_KEY=
